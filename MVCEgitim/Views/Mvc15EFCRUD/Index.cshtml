@model IEnumerable<MVCEgitim.Models.Product>

@{
    ViewBag.Title = "Ürünler";
}

<h2>Ürünler</h2>

<div class="row justify-content-between">
    <div class="col">
        @Html.ActionLink("Yeni Ekle", "Create")
    </div>
    <div class="col">
        <form action="/Mvc15EFCRUD/Index" method="get" class="row">
            <div class="col">
                <input id="Text1" type="text" name="kelime" class="form-control" />
            </div>
            <div class="col">
                <input id="Submit1" type="submit" value="Ara" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StokMiktari)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrunFiyati)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StokMiktari)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detay", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
